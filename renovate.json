{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base"],
  "timezone": "America/Los_Angeles",
  "schedule": ["on the 1st through 7th day of the month"],
  "prBanner": "[![search for \"{{{depName}}}\"](https://sourcegraph.com/search/badge?q=repo:%5Egithub%5C.com/{{{repository}}}%24+case:yes+-file:package%28-lock%29%3F%5C.json+{{{depName}}}&label=search+for+%22{{{depName}}}%22&suffix=matches)](https://sourcegraph.com/search?q=repo:%5Egithub%5C.com/{{{repository}}}%24+case:yes+-file:package%28-lock%29%3F%5C.json+{{{depName}}})",
  "lockFileMaintenance": {
    "schedule": ["on the 1st through 7th day of the month"]
  },
  "updateNotScheduled": true,
  "prCreation": "not-pending",
  "semanticCommits": true,
  "semanticCommitType": "chore",
  "rangeStrategy": "replace",
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "packagePatterns": [".*"],
      "semanticCommitType": "chore"
    },
    {
      "packagePatterns": ["^@sourcegraph/"],
      "packageNames": ["@sourcegraph/sourcegraph.proposed"],
      "rangeStrategy": "bump",
      "schedule": [],
      "minor": {
        "semanticCommitType": "feat"
      },
      "patch": {
        "semanticCommitType": "fix"
      }
    },
    {
      "packagePatterns": ["^@types/"],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "packageNames": ["@sourcegraph/sourcegraph.proposed", "@sourcegraph/extensions-client-common"],
      "assignees": ["chrismwendt"]
    },
    {
      "packageNames": ["@sourcegraph/codeintellify"],
      "assignees": ["felixfbecker", "ijsnow"]
    }
  ]
}
