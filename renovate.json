{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["github>sourcegraph/renovate-config"],
  "semanticCommits": false,
  "packageRules": [
    {
      "packageNames": ["typescript"],
      "ignoreUnstable": false,
      "followTag": "next",
      "schedule": null,
      "reviewers": [],
      "automerge": false,
      "labels": ["bot", "npm", "nightly"]
    },
    {
      "paths": ["dev/release/*"],
      "reviewers": ["beyang"]
    },
    {
      "paths": ["lsif/*"],
      "reviewers": ["team:code-intel"]
    }
  ]
}
