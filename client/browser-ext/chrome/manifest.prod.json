{
  "version": "1.2.1",
  "name": "Sourcegraph for GitHub",
  "manifest_version": 2,
  "description": "Gives GitHub IDE powers: jump to definition and hover tooltips in code, PRs, and diffs",
  "browser_action": {
    "default_title": "Sourcegraph"
  },
  "applications": {
    "gecko": {
      "id": "firefox-extension@sourcegraph.com"
    }
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://sourcegraph.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "js/inject.bundle.js"
      ],
      "css": [
        "css/highlight.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "cookies",
    "storage",
    "https://github.com/*",
    "https://sourcegraph.com/*"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; connect-src 'self' https://sourcegraph-logging.telligentdata.com;"
}
