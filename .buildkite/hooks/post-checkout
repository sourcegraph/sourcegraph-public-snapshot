#!/usr/bin/env bash

# shellcheck disable=SC1090
source "$HOME/.profile"

# Fetch the latest origin/master to accurately determine the set of changed
# files on this branch.
echo "Running git fetch..."
git fetch
echo "Running git fetch... done"

echo "install asdf plugins"
asdf install
echo "done installing"

# Tmp fix until PR is merged https://github.com/honeycombio/buildevents/pull/137
wget https://www.dropbox.com/s/j4qyute1lgk28xq/buildevents?dl=1 -O buildevents && chmod +x buildevents && mv buildevents /usr/local/bin

# Link the trace-script so we can have pretty steps in the buildkite ui
ln -s "$(pwd)/enterprise/dev/trace-command.sh" tr 2>/dev/null || true
