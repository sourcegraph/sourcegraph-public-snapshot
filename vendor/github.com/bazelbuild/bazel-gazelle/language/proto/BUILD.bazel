go_test(
    name = "proto_test",
    srcs = [
        "config_test.go",
        "fileinfo_test.go",
        "generate_test.go",
        "resolve_test.go",
    ],
    data = glob(
        ["testdata/**"],
        # Empty when distributed.
        allow_empty = True,
    ),
    embed = [":proto"],
    deps = [
        "//config",
        "//label",
        "//language",
        "//merger",
        "//repo",
        "//resolve",
        "//rule",
        "//testtools",
        "//walk",
        "@com_github_bazelbuild_buildtools//build",
    ],
