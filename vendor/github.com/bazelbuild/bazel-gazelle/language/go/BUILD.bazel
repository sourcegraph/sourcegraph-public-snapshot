        "//config",
        "//label",
        "//language",
        "//language/proto",
        "//merger",
        "//pathtools",
        "//repo",
        "//resolve",
        "//rule",
        "//testtools",
        "//walk",
        "@com_github_bazelbuild_buildtools//build",
