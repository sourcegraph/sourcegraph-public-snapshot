load("//dev:go_mockgen.bzl", "go_mockgen")
load("//dev:go_defs.bzl", "go_test")
load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "embed",
    srcs = [
        "embed.go",
        "files.go",
        "iface.go",
    ],
    importpath = "github.com/sourcegraph/sourcegraph/internal/embeddings/embed",
    tags = [TAG_PLATFORM_SEARCH],
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/api",
        "//internal/binary",
        "//internal/codeintel/context",
        "//internal/codeintel/types",
        "//internal/conf/conftypes",
        "//internal/embeddings",
        "//internal/embeddings/background/repo",
        "//internal/embeddings/embed/client",
        "//internal/embeddings/embed/client/azureopenai",
        "//internal/embeddings/embed/client/openai",
        "//internal/embeddings/embed/client/sourcegraph",
        "//internal/httpcli",
        "//internal/paths",
        "//internal/types",
        "//lib/errors",
        "@com_github_sourcegraph_log//:log",
    ],
)

go_test(
    name = "embed_test",
    timeout = "short",
    srcs = [
        "embed_test.go",
        "files_test.go",
        "mocks_test.go",
    ],
    embed = [":embed"],
    tags = [TAG_PLATFORM_SEARCH],
    deps = [
        "//internal/api",
        "//internal/codeintel/context",
        "//internal/codeintel/types",
        "//internal/embeddings",
        "//internal/embeddings/background/repo",
        "//internal/embeddings/embed/client",
        "//internal/paths",
        "//internal/types",
        "//lib/errors",
        "@com_github_sourcegraph_log//:log",
        "@com_github_stretchr_testify//require",
    ],
)

go_mockgen(
    name = "generate_mocks",
    out = "mocks_test.go",
    manifests = [
        "//:mockgen.yaml",
        "//:mockgen.test.yaml",
        "//:mockgen.temp.yaml",
    ],
    deps = [":embed"],
)
