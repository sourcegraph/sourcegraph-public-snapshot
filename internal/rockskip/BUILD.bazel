    name = "rockskip",
    srcs = [
        "git.go",
        "index.go",
        "postgres.go",
        "search.go",
        "server.go",
        "status.go",
    ],
    importpath = "github.com/sourcegraph/sourcegraph/internal/rockskip",
    visibility = ["//:__subpackages__"],
    deps = [
        "//cmd/symbols/fetcher",
        "//internal/actor",
        "//internal/api",
        "//internal/database",
        "//internal/database/basestore",
        "//internal/database/batch",
        "//internal/database/dbutil",
        "//internal/gitserver/gitdomain",
        "//internal/search",
        "//internal/search/result",
        "//lib/errors",
        "@com_github_amit7itz_goset//:goset",
        "@com_github_dustin_go_humanize//:go-humanize",
