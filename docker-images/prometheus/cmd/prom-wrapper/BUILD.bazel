go_test(
    name = "prom-wrapper_test",
    timeout = "short",
    srcs = [
        "receivers_test.go",
        "silence_test.go",
    ],
    embed = [":prom-wrapper_lib"],
    tags = [TAG_INFRA_RELEASE],
