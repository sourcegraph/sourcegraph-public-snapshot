go_binary(
    name = "prom-wrapper",
    embed = [":prom-wrapper_lib"],
    gotags = [
        "netgo",
        "dist",
    ],
    pure = "on",
    static = "on",
    tags = [TAG_INFRA_RELEASE],
    visibility = ["//visibility:public"],
