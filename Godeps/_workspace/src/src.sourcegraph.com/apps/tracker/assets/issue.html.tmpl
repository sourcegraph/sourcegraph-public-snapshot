<html>
	<head>
		{{template "head" .}}
	</head>
	<body>
		{{template "issue" .}}
		<div id="reaction-menu"></div>
	</body>
</html>

{{define "issue"}}
	{{$issue := .Issue}}
	<h1>{{$issue.Title}} <span class="gray">#{{$issue.ID}}</span></h1>
	<div id="issue-state-badge" style="margin-bottom: 20px;">{{template "issue-state-badge" $issue}}</div>
	{{if $issue.Reference}}{{template "reference" $issue}}{{end}}
	{{range .Items}}
		{{template "issue-item" .}}
	{{end}}
	<div id="new-item-marker"></div>
	{{template "new-comment" .}}
{{end}}

{{define "issue-item"}}
	{{if eq .TemplateName "comment"}}
		{{template "comment" .IssueItem}}
	{{else if eq .TemplateName "event"}}
		{{template "event" .IssueItem}}
	{{end}}
{{end}}
