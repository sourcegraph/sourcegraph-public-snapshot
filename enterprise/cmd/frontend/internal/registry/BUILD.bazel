load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "registry",
    srcs = [
        "frozen.go",
        "http_api.go",
    ],
    embedsrcs = ["frozen_legacy_extensions.json"],
    importpath = "github.com/sourcegraph/sourcegraph/enterprise/cmd/frontend/internal/registry",
