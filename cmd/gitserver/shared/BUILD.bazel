        "//internal/extsvc/gomodproxy",
        "//internal/extsvc/npm",
        "//internal/extsvc/pypi",
        "//internal/extsvc/rubygems",
        "//internal/gitserver/v1:gitserver",
        "//internal/goroutine",
        "//internal/grpc",
        "//internal/grpc/defaults",
