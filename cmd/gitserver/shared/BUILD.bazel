    # path is sandboxed properly.
    env = {"COURSIER_CACHE_DIR": "/tmp"},
    deps = [
        "//cmd/gitserver/server",
        "//internal/api",
        "//internal/codeintel/dependencies",
        "//internal/database",
        "//internal/extsvc",
        "//internal/types",
