    name = "gitserverfs_test",
    srcs = [
        "fs_test.go",
        "initfs_test.go",
    ],
    embed = [":gitserverfs"],
    tags = [TAG_PLATFORM_SOURCE],
    deps = [
        "//cmd/gitserver/internal/common",
        "//internal/api",
        "//internal/observation",
        "@com_github_sourcegraph_log//logtest",
        "@com_github_stretchr_testify//assert",
    ],
